{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "baseUrl":"./src",
        "lib":["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap":true,
        "incremental":true,
        "removeComments":true,
        "moduleResolution":"node",
        "resolveJsonModule":true,
        "esModuleInterop":true,
        "allowSyntheticDefaultImports":true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata":true,
        "preserveConstEnums": true,
    },
    "include": ["config/**/*", "src/**/*", "server/**/*", "database/**/*", "**/*.spec.ts"],
    "exclude": ["node_modules"],
}
